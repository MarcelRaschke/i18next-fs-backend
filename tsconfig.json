{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": { "i18next-fs-backend": ["./index.d.mts"] },

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./index.d.mts", "./test/**/*"],
  "exclude": []
}
